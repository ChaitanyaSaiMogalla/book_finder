<%- include('partials/header') %>

<div class="search-container">
  <form id="book-search-form" action="/submit-form" method="post">
      <h2>Search for a Book</h2>
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Enter book title">
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" placeholder="Enter author name">
      </div>
      <div class="form-group">
        <label for="publisher">Publisher:</label>
        <input type="text" id="publisher" name="publisher" placeholder="Enter Publisher:">
      </div>
      <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="isbn" placeholder="Enter ISBN">
      </div>
      <button type="submit" class="search-button" id="sub_btn">Search</button>
    </form>
  </div>

  <script src="/file.js"></script>

<%- include('partials/footer') %>
